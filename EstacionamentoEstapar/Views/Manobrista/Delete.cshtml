@model EstacionamentoEstapar.Models.Manobrista

@{
    ViewBag.Title = "Exclusão de Manobrista";
}

&nbsp;
<h2>@ViewBag.Title</h2>

&nbsp;
<h3>Tem certeza que deseja excluir este manobrista?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CPF)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CPF)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DtNascimento)
        </dt>

        <dd>
            @Convert.ToDateTime(Model.DtNascimento).ToString("dd/MM/yyyy")
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-primary" /> |
            @Html.ActionLink("Voltar para a lista", "Index")
        </div>
    }
</div>
