@model EstacionamentoEstapar.Models.Marca

@{
    ViewBag.Title = "Edição de Marca";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    &nbsp;
    <h2>@ViewBag.Title</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IdMarca)

    <div class="form-group">
        @Html.LabelFor(model => model.DscMarca, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DscMarca, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DscMarca, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Salvar" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Voltar para a lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
