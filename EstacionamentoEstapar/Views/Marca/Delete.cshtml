@model EstacionamentoEstapar.Models.Marca

@{
    ViewBag.Title = "Exclusão de Marca";
}

&nbsp;
<h2>@ViewBag.Title</h2>

&nbsp;

<h3>Tem certeza que deseja excluir esta marca?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DscMarca)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DscMarca)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-primary" /> |
            @Html.ActionLink("Voltar para a lista", "Index")
        </div>
    }
</div>
@{
    if (null != TempData["alertMessage"])
    {
        <script type="text/javascript">
            alert('@TempData["alertMessage"]');
        </script>
    }
}

